@model XYJPersonalSite.Models.BusinessViewModels.BlogDetailDTO

@{
    ViewData["Title"] = "Create";
}

<h3>Create</h3>
<hr />
<form asp-action="Create">
    <div class="form-horizontal">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Blog.Title" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Blog.Title" class="form-control none-max-width" />
                <span asp-validation-for="Blog.Title" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Blog.Summary" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <textarea class="form-control none-max-width" rows="4" asp-for="Blog.Summary"></textarea>
                <span asp-validation-for="Blog.Summary" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Blog.Content" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <textarea class="form-control none-max-width" rows="16" asp-for="Blog.Content"></textarea>
                <span asp-validation-for="Blog.Content" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Blog.TypeName" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="Blog.TypeName" class="form-control" asp-items="ViewBag.BlogTypes"></select>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Tags" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Tags" class="form-control none-max-width" placeholder="split by , in english" />
                <span asp-validation-for="Tags" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>
<hr />
<form class="form-horizontal col-md-10 col-md-offset-2" asp-action="UploadFiles" asp-controller="File" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="exampleInputFile">File input</label>
        <input type="file" name="files" id="exampleInputFile">
    </div>
    <div class="form-group">
        <input class="btn btn-default" type="submit" value="Upload" />
    </div>
</form>
<div>
    <ul id="upload-images-ul">
        
    </ul>
</div>
<br />
<div>
    <a asp-action="Index">Back to List</a>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
