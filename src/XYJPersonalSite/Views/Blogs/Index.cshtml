@model IEnumerable<XYJPersonalSite.Models.BusinessModels.Blog>

<h2>@ViewBag.Title</h2>
<br/>
<ul class="media-list">
    @foreach (var item in Model)
    {
        <li class="media">
            <div class="media">
                <div class="media-body">
                    <h4 class="media-heading"><a asp-action="Details" asp-route-id="@item.Id">@Html.DisplayFor(modelItem => item.Title)</a></h4>
                    <p>
                        @Html.DisplayFor(modelItem => item.Summary)
                    </p>
                    <label class="label label-success">@item.CreateTime</label>
                </div>
            </div>
        </li>
    }
</ul>
